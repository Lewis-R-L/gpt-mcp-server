{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/mcp",
      "dest": "/api/index.ts"
    },
    {
      "src": "/oauth/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/.well-known/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/health",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}